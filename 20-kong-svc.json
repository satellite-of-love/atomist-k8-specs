{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "kong",
    "labels": {
      "app": "kong"
    },
    "annotations" : {
      "service.beta.kubernetes.io/aws-load-balancer-ssl-cert": "arn:aws:acm:us-east-1:111664719423:certificate/bc909beb-9bcc-46de-a009-03ec6357e121",
      "service.beta.kubernetes.io/aws-load-balancer-backend-protocol": "http",
      "service.beta.kubernetes.io/aws-load-balancer-ssl-ports" : "https"
    }
  },
  "spec": {
    "ports": [
      {
        "name": "https",
        "protocol": "TCP",
        "port": 443,
        "targetPort": "api-gateway"
      },
      {
        "name": "http",
        "protocol": "TCP",
        "port": 80,
        "targetPort": "https-redirect"
      }
    ],
    "type" : "LoadBalancer",
    "selector": {
      "app": "kong"
    },
    "sessionAffinity": "None"
  }
}
